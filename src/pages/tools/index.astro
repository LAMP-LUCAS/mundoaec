    <h1 class="text-4xl font-bold text-center mb-12">Nossas Ferramentas</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {listedTools.map(tool => (
        <a href={tool.url} class="tool-card">
          <h2>{formatLinkName(tool.url)}</h2>
          <p>Explore a ferramenta {formatLinkName(tool.url.toLowerCase())} e simplifique suas tarefas de constru√ß√£o.</p>
        </a>
      ))}
    </div>
  </div>
</Layout>

