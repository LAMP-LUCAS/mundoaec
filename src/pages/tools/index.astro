// src/pages/tools/index.astro
import Layout from '../../layouts/Layout.astro';

// 1. Busque todos os arquivos .astro dentro desta pasta
// A fun√ß√£o Astro.glob() retorna um array de objetos para cada arquivo encontrado.
// O argumento `**/` faz a busca recursiva, o `*.astro` busca todos os arquivos .astro.
const allTools = await Astro.glob('./*.astro');

// 2. Filtre o arquivo 'index.astro' para n√£o list√°-lo
const listedTools = allTools.filter(tool => !tool.file.includes('index.astro'));

// 3. Opcional: Ordene as ferramentas por t√≠tulo ou nome de arquivo
listedTools.sort((a, b) => a.url.localeCompare(b.url));

// Fun√ß√£o para formatar o nome do link, ex: /tools/calculadora -> Calculadora
function formatLinkName(url) {
  // Pega a √∫ltima parte da URL (ex: calculadora.astro)
  const parts = url.split('/');
  const fileName = parts[parts.length - 1].replace('.astro', '');
  
  // Converte a primeira letra para mai√∫scula
  return fileName.charAt(0).toUpperCase() + fileName.slice(1);
}
